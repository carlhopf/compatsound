{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
  },
  "rules": {
    "no-unused-vars": ["error"],
    "quotes": [2, "single"],
    "comma-dangle": [2, "always-multiline"],
    "dot-location": [2, "property"],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "array-bracket-spacing": [2, "never"],
    "comma-spacing": [2, { before: false, after: true }],
    "no-undef": 2
  }
}
